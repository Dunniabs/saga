{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "dev": "next dev --experimental-https --turbo",
    "build": "next build",
    "start": "next start",
    "format": "pnpm biome format --write ./src && pnpm biome check --apply ./src",
    "lint": "pnpm biome lint ./src --apply",
